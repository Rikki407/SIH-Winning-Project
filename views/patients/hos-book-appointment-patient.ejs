                        <p class="g-text">Kindly fill in the following form to request an appointment</p>
                    </div>

                    <div class=" bg-w">
                        <div class="col-lg-10 col-lg-offset-1 col-xs-12">
                            <section class="box ">
                                <header class="panel_header">
                                    <h2 class="title pull-left">Appointment Information</h2>
                                    <div class="actions panel_actions pull-right">
                                        <a class="box_toggle fa fa-chevron-down"></a>
                                        <a class="box_setting fa fa-cog" data-toggle="modal" href="hos-book-appointment.html#section-settings"></a>
                                        <a class="box_close fa fa-times"></a>
                                    </div>
                                </header>
                                <div class="content-body">
                                    <div class="row">
                                        <form action="/appointment/create" method="post">
                                            <div class="col-xs-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Hospital</label>
                                                    <span class="desc"></span>
                                                    <select name="hospital_name" class="form-control ">
                                                        <option  value=""></option>
                                                        <%hospitals.forEach( hos=>{ %>
                                                        <option value="<%=hos.name%>"> <%=hos.name%></option>
                                                        <%})%>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Service</label>
                                                    <span class="desc"></span>
                                                    <select name="service" class="form-control ">
                                                        <option value=""></option>
                                                        <option value="Dental Care">Dental Care</option>
                                                        <option value="Aging Solutions">Aging Solutions</option>
                                                        <option value="Eye Care">Eye Care</option>
                                                        <option value="Physiotherapy">Physiotherapy</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label class="form-label" for="field-7">Date</label>
                                                    <span class="desc">e.g. "31/12/2015"</span>
                                                    <div class="controls">
                                                        <input type="datetime-local" name="datetime" class="form-control" id="field-7" data-mask="datetime12">
                                                    </div>
                                                </div>
                                               
                                                <div class="form-group">
                                                    <label class="form-label" for="field-6">Brief</label>
                                                    <span class="desc">e.g. "Enter any size of text description here"</span>
                                                    <div class="controls">
                                                        <textarea  name="desc" class="form-control autogrow" cols="5" id="field-6" style="overflow: hidden; overflow-wrap: break-word; resize: horizontal; height: 54px;"></textarea>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                                <div class="text-left">
                                                    <button type="submit" class="btn btn-primary">Create</button>
                                                    <button type="button" class="btn">Cancel</button>
                                                </div>
                                            </div>
                                        </form>
